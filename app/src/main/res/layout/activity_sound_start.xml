<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:andoroid="http://schemas.android.com/apk/res/android"
    andoroid:layout_width="match_parent"
    andoroid:layout_height="match_parent"
    andoroid:orientation="vertical">

    <Button
        andoroid:id="@+id/btPlay"
        andoroid:layout_width="match_parent"
        andoroid:layout_height="wrap_content"
        andoroid:onClick="onPlayButtonClick"
        andoroid:text="@string/bt_play_play"/>

    <Button
        andoroid:id="@+id/btStop"
        andoroid:layout_width="match_parent"
        andoroid:layout_height="wrap_content"
        andoroid:enabled="false"
        andoroid:onClick="onStopButtonClick"
        andoroid:text="@string/bt_play_stop"/>
</LinearLayout>